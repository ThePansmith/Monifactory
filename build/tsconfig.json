{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "lib": ["ES2023"],

        // Pedantic
        "alwaysStrict": true,
        "allowArbitraryExtensions": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,

        // Settings for running with node ^23.6.0
        "allowJs": false,
        "noEmit": true,
        "erasableSyntaxOnly": true,
        "allowImportingTsExtensions": true,
    },
    "exclude": [
        "**/*.template.ts"
    ]
}
